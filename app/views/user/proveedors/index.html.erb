<%- model_class = Proveedor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="container table-section">
  <div class="row">
    <div class="col-lg-12">
      <table id="ProjectTable" class="table table-striped table-bordered table-responsive" cellspacing="0" width="100%" >
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:rut) %></th>
            <th><%= model_class.human_attribute_name(:razon_social) %></th>
            <th><%= model_class.human_attribute_name(:estado_general) %></th>

            <th><%= model_class.human_attribute_name(:contacto_nombre) %></th>

            <th><%= model_class.human_attribute_name(:tipo_de_certificacion_iso) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th><%= model_class.human_attribute_name(:rut) %></th>
            <th><%= model_class.human_attribute_name(:razon_social) %></th>
            <th><%= model_class.human_attribute_name(:estado_general) %></th>

            <th><%= model_class.human_attribute_name(:contacto_nombre) %></th>

            <th><%= model_class.human_attribute_name(:tipo_de_certificacion_iso) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </tfoot>
        <tbody>
          <% @proveedors.each do |proveedor| %>
            <tr>
              <td><%= proveedor.rut %></td>
              <td><%= proveedor.razon_social %></td>
              <td><%= proveedor.estado_general %></td>

              <td><%= proveedor.contacto_nombre %></td>

              <td><%= proveedor.tipo_de_certificacion_iso %></td>
              <td>
                <%= link_to t('.show', :default => t("helpers.links.ver_proyecto")),
                            user_proveedor_path(proveedor), :class => 'btn btn-info btn-xs' %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_proveedor_path,
            :class => 'btn btn-primary' %>
