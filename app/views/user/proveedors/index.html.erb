<%- model_class = Proveedor -%>
<div class="page-header">
  <h1><%= "Proveedores" %></h1>
</div>

<div class="container table-section">
  <div class="row">
    <div class="col-lg-12">
      <table id="ProjectTable" class="table table-striped table-bordered table-responsive" cellspacing="0" width="100%" >
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:nombre) %></th>
            <th><%= model_class.human_attribute_name(:rut) %></th>
            <th><%= model_class.human_attribute_name(:nombre_contacto) %></th>
            <th><%= model_class.human_attribute_name(:telefono) %></th>
            <th><%= model_class.human_attribute_name(:email) %></th>
            <th><%= model_class.human_attribute_name(:estado) %></th>
            <th><%= model_class.human_attribute_name(:direccion) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th><%= model_class.human_attribute_name(:nombre) %></th>
            <th><%= model_class.human_attribute_name(:rut) %></th>
            <th><%= model_class.human_attribute_name(:nombre_contacto) %></th>
            <th><%= model_class.human_attribute_name(:telefono) %></th>
            <th><%= model_class.human_attribute_name(:email) %></th>
            <th><%= model_class.human_attribute_name(:estado) %></th>
            <th><%= model_class.human_attribute_name(:direccion) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </tfoot>
        <tbody>
          <% @proveedors.each do |proveedor| %>
            <tr>
              <td><%= proveedor.nombre %></td>
              <td><%= proveedor.rut %></td>
              <td><%= proveedor.nombre_contacto %></td>
              <td><%= proveedor.telefono %></td>
              <td><%= proveedor.email %></td>
              <td><%= proveedor.estado %></td>
              <td><%= proveedor.direccion %></td>
              <td>
                <%= link_to t('.show', :default => t("helpers.links.ver_proveedor")),
                            user_proveedor_path(proveedor), :class => 'btn btn-info btn-xs' %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
