<div class="data-table-container" style="width: 90%; margin-right: auto; margin-left: auto;">
  <table class="table table-hover table-striped table-bordered data-table">

    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:rut) %></th>
        <th><%= model_class.human_attribute_name(:razon_social) %></th>
        <th><%= model_class.human_attribute_name(:estado_general) %></th>
        <th><%= model_class.human_attribute_name(:contacto_nombre) %></th>
        <th><%= model_class.human_attribute_name(:tipo_de_certificacion_iso) %></th>
        <th><%= 'Estado' %></th>
        <th><%= 'Acci贸n' %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th><%= model_class.human_attribute_name(:rut) %></th>
        <th><%= model_class.human_attribute_name(:razon_social) %></th>
        <th><%= model_class.human_attribute_name(:estado_general) %></th>
        <th><%= model_class.human_attribute_name(:contacto_nombre) %></th>
        <th><%= model_class.human_attribute_name(:tipo_de_certificacion_iso) %></th>
        <th><%= 'Estado' %></th>
        <th><%= 'Acci贸n' %></th>
      </tr>
    </tfoot>
    <tbody>
      <% @proveedors.each do |proveedor| %>
        <tr>
          <td><%= proveedor.rut %></td>
          <td><%= proveedor.razon_social %></td>
          <td><%= proveedor.estado_general %></td>
          <td><%= proveedor.contacto_nombre %></td>
          <td><%= proveedor.tipo_de_certificacion_iso %></td>
          <td><% if proveedor.estado_general == 'Vigente'%>
                <%= image_tag ("/img/up2.png"), class: "img-responsive"%>
              <% end %>
          </td>

          <td>
            <%= link_to t('.show', :default => t("helpers.links.ver_empresa")),
                        user_proveedor_path(proveedor), :class => 'btn btn-info btn-xs' %>
          </td>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>



