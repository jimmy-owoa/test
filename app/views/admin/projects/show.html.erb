<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @project.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @project.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:region) %>:</strong></dt>
  <dd><%= @project.region %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sector) %>:</strong></dt>
  <dd><%= Sector.find_by_id(@project.sector_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_type) %>:</strong></dt>
  <dd><% @project.project_types.each do |ps| %>
        <%= ps.name %>
      <% end %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:investment) %>:</strong></dt>
  <dd><%= 'US$ ' + @project.investment.to_s + ' Millones'%></dd>
  <dt><strong><%= model_class.human_attribute_name(:production) %>:</strong></dt>
  <dd><%= @project.production %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_production) %>:</strong></dt>
  <dd><%= @project.unit_production %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @project.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @project.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_phase) %>:</strong></dt>
  <dd><%= @project.current_phase %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsible) %>:</strong></dt>
  <dd><%= @project.responsible %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contract_type) %>:</strong></dt>
  <dd><%= @project.contract_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latest_information) %>:</strong></dt>
  <dd><%= @project.latest_information %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_name) %>:</strong></dt>
  <dd><%= @project.contact_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_company) %>:</strong></dt>
  <dd><%= @project.contact_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_job) %>:</strong></dt>
  <dd><%= @project.contact_job %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_phone) %>:</strong></dt>
  <dd><%= @project.contact_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_address) %>:</strong></dt>
  <dd><%= @project.contact_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:history) %>:</strong></dt>
  <dd><%= @project.history %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adjudications) %>:</strong></dt>
  <dd><%= @project.adjudications %></dd>
  <dt><strong><%= model_class.human_attribute_name(:main_works) %>:</strong></dt>
  <dd><%= @project.main_works %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @project.owner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clients) %>:</strong></dt>
  <dd><%= @project.client %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_projects_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_project_path(@project), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_project_path(@project),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
