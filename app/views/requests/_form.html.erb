                <h3 align="center"><%= "Registro de usuario" %> </h3>
                <img id="profile-img" class="profile-img-card" src="/assets/images/logo.png" />

                <p id="profile-name" class="profile-name-card"></p>
                    <%= form_for @request, :html => { :class => "form-horizontal request" } do |f| %>
                      <% if @request.errors.any? %>
                        <div id="error_expl" class="panel panel-danger">
                          <div class="panel-heading">
                            <h5 class="panel-title"><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h5>
                          </div>
                          <div class="panel-body">
                            <ul>
                            <% @request.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                            </ul>
                          </div>
                        </div>
                      <% end %>

                      <div class="form-group">
                        <%= f.label :empresa , :class => 'control-label col-lg-4' %>
                        <div class="col-lg-10">
                          <%= f.text_field :business, :class => 'form-control' %>
                        </div>
                        <%=f.error_span(:business) %>
                      </div>
                      <div class="form-group">
                        <%= f.label :ciudad, :class => 'control-label col-lg-4' %>
                        <div class="col-lg-10">
