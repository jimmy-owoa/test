                      <div class="form-group">
                        <%= f.label :persona_de_contacto, :class => 'control-label col-lg-7' %>
                        <div class="col-lg-10">
                          <%= f.text_field :contact_person, :class => 'form-control' %>
                        </div>
                        <%=f.error_span(:contact_person) %>
                      </div>
                      <div class="form-group">
                        <%= f.label :telefono, :class => 'control-label col-lg-4' %>
                        <div class="col-lg-10">
                          <%= f.number_field :phone, :class => 'form-control' %>
                        </div>
                        <%=f.error_span(:telefono) %>
