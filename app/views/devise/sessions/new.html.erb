
<link rel="stylesheet" href="/assets/css/style.css">

<div class="container">
    <div class="row">
        <div class="col-lg-6 text-login">
            <h1><%= link_to "Agenda Empresaria", 'http://www.agendaempresaria.com '%></h1><hr>
        </div>

        <div class="col-lg-6">
            <div class="card card-container">
                <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
                <h2 align="center"><%= "Ingreso de usuario" %> </h2>
                <img id="profile-img" class="profile-img-card" src="/assets/images/logo.png" />

                <p id="profile-name" class="profile-name-card"></p>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <span id="reauth-email" class="reauth-email"></span>
                    <%= f.email_field :email, autofocus: true, class: 'form-control', id:'inputEmail', placeholder:'Email' %>
                    <%= f.password_field :password, autocomplete: "off" , class: 'form-control', id:'inputEmail', placeholder:'Password' %>
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>
                    <%= f.submit "Ingresar", class:'btn btn-lg btn-primary btn-block btn-signin', type:'submit' %>
                    <%= link_to "Registrarse", new_request_path %>

                    <% end %>
                <%= render "devise/shared/links" %>


            </div><!-- /card-container -->
        </div>
    </div>
</div><!-- /container -->
